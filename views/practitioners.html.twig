{% extends "layout.html.twig" %}
{% set practitionerMenu = true %}

{% block title %}Médicaments{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if practitioners %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Ville</th>
                </tr>
            </thead>
            {% for practitioner in practitioners %}
                <tr>
                    <td><a href="/practitioners/{{ practitioner.id }}">{{ practitioner.firstName }}</a></td>
                    <td>{{ practitioner.practitioner_type.name }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucun practicien trouvé.</div>
{% endif %}   
{% endblock %}